# MENU SCREEN SETTINGS
win-size 640 512
win-origin 520 285
window-title PSG
#undecorated 1

# PATHS
model-cache-dir tmp/
model-path ./data/models
model-path ./data/themes
texture-path ./data/textures
sound-path ./data/sfx
particle-path ./data/gfx

# DEBUG OPTIONS
show-frame-rate-meter 1
want-pstats 1
task-timer-verbose 1
pstats-tasks 1

# OTHER OPTIONS
#want-tk 1
sync-video 0


aspect-ratio 2.0
#audio-library-name p3openal_audio
notify-level fatal
#compressed-textures 1
#text-default-font data/fonts/vera.ttf
text-pixels-per-unit 90
text-point-size 9
text-texture-margin 5
#track-memory-usage 1 
geom-cache-size 300
#notify-level-glgsg spam
